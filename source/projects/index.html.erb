---
title: Projects
---

<%
all_projects = sitemap.resources.select do |r|
  r.path.start_with?('projects') && r.path != 'projects/index.html'
end
%>

<h3>Useful</h3>

<%
  useful_projects = all_projects.select do |r|
    r.data["categories"].include?("useful")
  end
  sorted_useful_projects = useful_projects.sort_by do
    |r| r.data["rank"]
  end
%>
<%= partial(:project_list, :locals => { :projects => sorted_useful_projects, :ignored_category => "useful" }) %>

<h3>Personal</h3>
<%
  personal_projects = all_projects.select do |r|
    r.data["categories"].include?("personal")
  end
  sorted_personal_projects = personal_projects.sort_by do
    |r| r.data["rank"]
  end
%>
<%= partial(:project_list, :locals => { :projects => sorted_personal_projects, :ignored_category => "personal" }) %>
