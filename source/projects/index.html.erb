---
title: Projects
---

<h3>Useful</h3>
<%=
  useful_projects = projects_with_category('useful')
  sorted_useful_projects = useful_projects.sort_by do
    |r| r.data['rank']
  end
  partial(:project_list,
          :locals =>
          { :projects => sorted_useful_projects,
            :ignored_category => 'useful' })
%>

<h3>Personal</h3>
<%=
  personal_projects = projects_with_category('personal')
  partial(:project_list,
          :locals =>
          { :projects => personal_projects,
            :ignored_category => 'personal' })
%>

<h3>Miscellaneous</h3>
<%=
misc_projects = all_projects - useful_projects - personal_projects
partial(:project_list, :locals => { :projects => misc_projects })
%>
